package lbjgen;

import java.util.List;
import structure.*;
import parser.*;
import lbj.*;

discrete% MentionFeatures (Mention mention) <- {
    for (int i = 0; i < mention.features.size(); i++) {
	sense mention.features.get(i);
    }
}

discrete MentionLabel(Mention mention) <- { return mention.label; }

discrete MentionClassifier(Mention mention) <-
learn MentionLabel
  using MentionFeatures
  from new MentionParser(0.0, 0.8)
  50 rounds

  with SparseNetworkLearner {
     SparseAveragedPerceptron.Parameters p =
     new SparseAveragedPerceptron.Parameters();
     p.learningRate = .1;
     p.thickness = 2;
     baseLTU = new SparseAveragedPerceptron(p);
  }

  testFrom new MentionParser(0.8, 1.0)
		
  progressOutput 2000

end